<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:orientation="horizontal"
    android:layout_height="130dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_novel_icon"
            android:src="@mipmap/cover"
            android:layout_width="80dp"
            android:layout_height="100dp" />
        <TextView
            android:id="@+id/text_topic_chapter_cnt"
            android:text="更新至..."
            android:gravity="center"
            android:background="#39a0e5"
            android:layout_width="80dp"
            android:layout_height="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
       android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView

                android:textSize="16sp"
                android:id="@+id/text_topic_title"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="心事还是有那个"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_topic_time"

                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2015-09-09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:textSize="12sp"
                android:text="心事还是有那个"
                android:id="@+id/text_topic_content"
                android:layout_width="match_parent"
                android:layout_height="70dp" />


        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="20dp">
            <ImageView
                android:id="@+id/img_topic_icon"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_topic_icon"
                android:text="向日葵"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_topic_author" />

            <ImageView
                android:layout_toLeftOf="@+id/text_topic_praisecnt"
                android:layout_centerVertical="true"
                android:src="@mipmap/zan"
                android:layout_width="20dp"
                android:layout_height="20dp" />


            <TextView
                android:textSize="12sp"
                android:id="@+id/text_topic_praisecnt"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/img_track_icon"
                android:text="32"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/img_track_icon"
                android:layout_centerVertical="true"
               android:layout_toLeftOf="@+id/tv_track_cnt"
                android:src="@mipmap/track"
                android:layout_width="20dp"
                android:layout_height="20dp" />


            <TextView
                android:id="@+id/tv_track_cnt"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/btn_topic_collect"
                android:text="32"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

           <Button
               android:id="@+id/btn_topic_collect"
               android:layout_marginRight="10dp"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:background="@mipmap/off_collect"
               android:layout_width="20dp"
               android:layout_height="20dp" />


        </RelativeLayout>



    </LinearLayout>



</LinearLayout>
