<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:paddingLeft="@dimen/titlebar_paddingLeft"
        android:gravity="center_vertical"
        android:background="#39a0e5"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/text_prod_back"
            android:text="返回"
            android:textSize="@dimen/titlebar_text_size"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="我的作品"
            android:textSize="@dimen/titlebar_text_size"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
           android:id="@+id/btn_prod_novel"
            android:background="@mipmap/tab_on_novel"
            android:layout_width="100dp"
            android:layout_height="30dp" />
        <Button
            android:background="@mipmap/tab_chapter_off"
            android:id="@+id/btn_prod_chapter"
            android:layout_width="100dp"
            android:layout_height="30dp" />
        <Button
            android:background="@mipmap/tab_chapter_del_off"
            android:id="@+id/btn_prod_chapter_del"
            android:layout_width="100dp"
            android:layout_height="30dp" />

    </LinearLayout>
    <ListView
        android:id="@+id/list_prod_novel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
    <ListView
        android:visibility="gone"
        android:id="@+id/list_prod_chapter"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>